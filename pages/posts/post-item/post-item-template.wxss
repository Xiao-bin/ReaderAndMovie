.post-container{
    background: #fff;
    display: flex;
    flex-direction: column;
    margin-top: 10px;
    margin-bottom: 20px;
    /* border-top:1px solid #333;
    border-bottom:1px solid #333;  */
}
.post-author-date{
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
    width:60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date{
    margin-left: 20rpx;
    margin-bottom: 5px;
    vertical-align: middle;
    font-size: 26rpx;
}
.post-title{
    font-size: 34rpx;
    font-weight: bold;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-img{
 /*   margin-left: 16px;*/
    width: 100%;
    height: 340rpx;
    margin: auot 0;
    margin-bottom: 15px;
}
.post-content{
    color:#666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
}
.post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
    margin-bottom: 5rpx;
}
.post-like-img{
    height: 16px;
    width:16px;
    margin-right: 8px;
    vertical-align: middle
}
.post-like-font{
    vertical-align: middle;
    margin-right: 20px;
}